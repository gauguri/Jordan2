<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ShopLane</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;600;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
<header>
    <div class="navbar">
        <a class="brand" asp-controller="Home" asp-action="Index">
            <span>Shop</span>Lane
        </a>
        <nav class="nav-links">
            <a asp-controller="Home" asp-action="Index">Clothing</a>
            <a asp-controller="Home" asp-action="Index">Accessories</a>
        </nav>
        <div class="nav-actions">
            <div class="search-box">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-3.87-3.87m0 0A7.5 7.5 0 1 0 5.25 5.25a7.5 7.5 0 0 0 11.88 11.88Z" />
                </svg>
                <input type="search" placeholder="Search for Jordan apparel" aria-label="Search" />
            </div>
            <a class="cart-indicator" asp-controller="Cart" asp-action="Index" aria-label="Shopping cart">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" width="28" height="28">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437m0 0 1.35 5.062A2.25 2.25 0 0 0 8.64 12.75h7.443a2.25 2.25 0 0 0 2.21-1.716l1.2-4.8a1.125 1.125 0 0 0-1.089-1.434H5.106m0 0L4.5 4.5m5.25 14.25a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Zm9 0a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z" />
                </svg>
                <span>@(ViewBag.CartCount ?? 0)</span>
            </a>
        </div>
    </div>
</header>

<main role="main">
    @RenderBody()
</main>

<footer>
    <div class="footer-content">
        <div>
            <h4>Online Store</h4>
            <p>Men's Clothing</p>
            <p>Women's Clothing</p>
            <p>Accessories</p>
        </div>
        <div>
            <h4>Helpful Links</h4>
            <p>Home</p>
            <p>About</p>
            <p>Contact</p>
        </div>
        <div>
            <h4>Partners</h4>
            <p>Nike</p>
            <p>Jordan Brand</p>
            <p>Foot Locker</p>
        </div>
        <div>
            <h4>Visit Us</h4>
            <p>Building 23</p>
            <p>Jumpman Street</p>
            <p>Chicago, IL 60623</p>
        </div>
    </div>
    <div class="copyright">Â© @DateTime.UtcNow.Year ShopLane. Crafted for Jordan fans.</div>
</footer>

@RenderSection("Scripts", required: false)
</body>
</html>
